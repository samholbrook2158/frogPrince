<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Friends</title>
    <link rel="stylesheet" href="/css/friends.css" />
  </head>
  <body>
    <!-- Navigation bar -->
  <nav class="nav-bar">
    <div class="dropdown">
      <div class="dropdown-content">
        <a href="/dashboard" class="nav-button">Home</a>
        <a href="/account" class="nav-button">Account</a>
        <a href="/friends" class="nav-button">Friends</a>
        <a href="/messages" class="nav-button">Messages</a>
        <a href="/renewal" class="nav-button">Renewals</a>
        <a href="/about" class="nav-button">About us</a>
        <a href="/FAQ" class="nav-button">FAQ</a>
        <a href="/logout" class="nav-button">Sign out</a>
      </div>
    </div>
  </nav>
    <h1>Friends</h1>
    <form action="/friends/search" method="post">
      <input type="text" name="query" placeholder="Search for users" />
      <button type="submit">Search</button>
    </form>

    <h2>Search Results</h2>
    <ul>
      <% (searchResults || []).forEach(function(result) { %> <% var isFriend =
      friends.some(friend => friend.id === result.id); %> <% var hasRequest =
      requests.some(request => request.id === result.id); %>
      <li>
        <%= result.username %> <% if (!isFriend && !hasRequest) { %>
        <form
          action="/friends/send-request"
          method="post"
          style="display: inline"
        >
          <input type="hidden" name="friend_id" value="<%= result.id %>" />
          <button type="submit">Send Request</button>
        </form>
        <% } %>
      </li>
      <% }) %>
    </ul>

    <h2>Friend Requests</h2>
    <% if (typeof error !== 'undefined' && error) { %>
    <!-- Add typeof check here -->
    <p><%= error %></p>
    <% } %>
    <ul>
      <% requests.forEach(function(request) { %>
      <li>
        <%= request.username %>
        <form
          action="/friends/accept-request"
          method="post"
          style="display: inline"
        >
          <input type="hidden" name="request_id" value="<%= request.id %>" />
          <button type="submit">Accept</button>
        </form>
        <form
          action="/friends/decline-request"
          method="post"
          style="display: inline"
        >
          <input type="hidden" name="request_id" value="<%= request.id %>" />
          <button type="submit">Decline</button>
        </form>
      </li>
      <% }) %>
    </ul>

    <h2>Friends List</h2>
    <ul>
      <% friends.forEach(function(friend) { %>
      <li><%= friend.username %></li>
      <% }) %>
    </ul>
    <a href="/dashboard">Back to dashboard</a>
  </body>
</html>
